<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFFE7"
    app:layout_insetEdge="none"
    app:layout_scrollEffect="none">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#224E2F"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="#00FFFFFF"
                android:clickable="true"
                android:paddingStart="20dp"
                android:paddingTop="35dp"
                app:srcCompat="@drawable/arrow_left_pale_yellow" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="0"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textView"
                style="@style/green_dark_20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"

                android:paddingBottom="16dp"
                android:text="Invoice"
                android:textAlignment="center" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="8dp"
                android:background="#224E2F" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="3dp">


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/donate_banner" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@drawable/button_outlined"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"

                >


                <TextView
                    android:id="@+id/textView9"
                    style="@style/green_dark_14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingTop="8dp"
                    android:text="Recepient"
                    android:paddingBottom="2dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/textView10"
                    style="@style/green_dark_12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="lorem ipsum"
                    android:paddingBottom="2dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"/>

                <View
                    android:id="@+id/divider6"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#224E2F"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"/>

                <TextView
                    android:id="@+id/textView11"
                    style="@style/green_dark_14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amount (RM)"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/textView12"
                    style="@style/green_dark_12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:paddingBottom="2dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"/>

                <View
                    android:id="@+id/divider7"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#224E2F"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"/>

                <TextView
                    android:id="@+id/textView13"
                    style="@style/green_dark_14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transaction Time"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/textView14"
                    style="@style/green_dark_12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="time"
                    android:paddingBottom="2dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"/>

                <View
                    android:id="@+id/divider8"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#224E2F"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"/>

                <TextView
                    android:id="@+id/textView15"
                    style="@style/green_dark_14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remark"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/textView16"
                    style="@style/green_dark_12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="lorem ipsum"
                    android:paddingBottom="2dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView17"
                style="@style/green_dark_14dp"
                android:layout_width="190dp"
                android:layout_height="43dp"

                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Pemberian anda hari ini menjadi sinar harapan"
                android:textAlignment="center"
                android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>